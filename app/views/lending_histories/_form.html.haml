= form_for @lending_history do |f|
  - if @lending_history.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lending_history.errors.count, "error")} prohibited this lending_history from being saved:"
      %ul
        - @lending_history.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :license
    = f.text_field :license
  .actions
    = f.submit 'Save'
